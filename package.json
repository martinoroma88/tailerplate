{
  "name": "tailerplate",
  "version": "2.0.0",
  "description": "Minimal Tailwindcss + HTML boilerplate",
  "main": "index.js",
  "scripts": {
    "dev-css": "cross-env NODE_ENV=development npx postcss tailwind.css --o ./public/assets/style.css --watch",
    "dev-serve": "npx live-server public",
    "serve": "concurrently \"npm:dev-*\"",
    "build": "cross-env NODE_ENV=production npx postcss tailwind.css --o ./public/assets/style.css"
  },
  "author": "Genesi Communication Design",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^6.0.2",
    "cross-env": "^7.0.3",
    "postcss-cli": "^8.3.1"
  },
  "dependencies": {
    "autoprefixer": "^10.2.1",
    "postcss": "^8.2.4",
    "tailwindcss": "^2.1.0"
  }
}
